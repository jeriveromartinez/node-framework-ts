{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./dist",
        "removeComments": true,
        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "alwaysStrict": true,
        /* Module Resolution Options */
        "moduleResolution": "node",
        "baseUrl": "./src",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}